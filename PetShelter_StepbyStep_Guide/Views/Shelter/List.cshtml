@model IEnumerable<PetShelter_StepbyStep_Guide.ViewModels.ShelterDetailsVM>

@{
    ViewBag.Title = "List";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PetCapacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pets)
        </th>

        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PetCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pets.Count)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
            </td>
        </tr>
    }
</table>

